alias vimzsh="vim ~/.zshrc && source ~/.zshrc"
alias rezsh="source ~/.zshrc"
alias irc="weechat-curses"
alias rm~="find . -name '*~' -print0 | xargs -0 /bin/rm -f"
alias autotest="watchr test.watchr"
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias :wq='sudo shutdown -r now'
alias vimrc='vim ~/.vimrc'

alias wrb='ruby -run -e httpd . -p 5000'

#git
alias gti=git
alias g=git
alias gf='git fetch'
alias gl='git l'

#bundle
alias be="bundle exec"
alias bi="bundle install"

alert_helper() {
  history|tail -n1|sed -e "s/^\s*[0-9]\+\s*//" -e "s/;\s*alert$//"
}

alias alert='notify-send -i utilities-terminal "$(alert_helper)"'
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias stfu="pactl set-sink-volume 0 -- -100%"
alias pumpitup="pactl set-sink-volume 0 -- -100% && pactl set-sink-volume 0 -- +100%"
